<!DOCTYPE html>
<html>
<head>
  <title>SEProject :: <%= yield :title %> </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
			<a class="navbar-brand" href="#">
			    <span class="glyphicon glyphicon-map-marker"></span>
			</a>
		</div>
		<% if current_user %>
			<ul class="nav navbar-nav navbar-right">
		        <li class="dropdown">
		          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><strong><%= current_user.username %></strong> who is a <%= current_user.user_type %> <span class="caret"></span></a>
		          <ul class="dropdown-menu" role="menu">
		            <li><%= link_to 'Logout', logout_path %></li>
		          </ul>
		        </li>
		    </ul>
		<% end %>
	</div>
	</nav>

	<div class="container-fluid">
		<% flash.each do |key, value| %>
	    	<div class="alert alert-<%= key %>"><%= value %></div>
	  	<% end %>
	  <%= yield %>
	</div>

	<script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?libraries=places,visualization&key=AIzaSyD3Jn-bBrowY1713IpqVkuOi7XToPeMakY"></script>

	<%= javascript_include_tag "application" %>
</body>
</html>
