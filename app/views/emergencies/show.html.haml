-# in app/views/movies/show.html.haml

%h2 Details about Emergency

%ul#details
  %li
    Emergency Location-latitude:
    = @emergency.lat
  %li 
    Emergency Location-longitude:
    = @emergency.long
  %li
    Emergency Type:
    = @emergency.emergency_type
  %li
    Added on:
    = @emergency.start_time
  %li
    Amount needed:
    = @emergency.amount_needed

-if @user.user_type == 'NGO-worker'
  = button_to 'See Donors', emergency_donors_path(@emergency.id), :method => :get
-elsif @user.user_type == 'donor'
  = button_to 'Pledge', new_pledge_path(@emergency.id), :method => :get
//= link_to 'Edit', edit_emergecny_path(@emergency)
//= button_to 'Pledge', pledge_path
= button_to 'Delete', emergencies_path(@emergency), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to Home Page', home_path