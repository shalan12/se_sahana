<% provide(:title, "Welcome") %>
<% if @user.user_type == 'field-worker' %>
	<%= link_to 'Add Emergency', new_emergency_path, {:class => 'col-md-12 btn btn-success' }%>
	<%= form_tag(emergencies_path, {:method => :get}) do %>
  		<%= label_tag 'Options for sorting: ' %>
  		<%= select_tag :sort_by, options_for_select(['Amount needed', 'Number of Emergencies']) %>
  		<%= submit_tag 'Sort By' %>
  	<% end %>	
<% end %>
<% if @user.user_type == 'NGO-worker' %>
	<%= link_to 'View All Donors', donors_path, {:class => 'col-md-12 btn btn-success'} %>
<% end %>
